// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  name         String?
  passwordHash String?
  accounts     Account[]
  sessions     Session[]
  courses      Course[]
  createdAt    DateTime @default(now())
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Course {
  id           String         @id @default(uuid())
  userId       String
  name         String
  number       String
  creditHours  Int
  weightingMode String        @default("percentage")
  categories   GradeCategory[]
  gradingScale GradingScale[]
  createdAt    DateTime       @default(now())
  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model GradeCategory {
  id            String     @id @default(uuid())
  courseId      String
  label         String
  weightPercent Float
  multiple      Boolean
  expectedCount Int?
  dropLowest    Int        @default(0)
  items         GradeItem[]
  course        Course     @relation(fields: [courseId], references: [id], onDelete: Cascade)
}

model GradeItem {
  id         String       @id @default(uuid())
  categoryId String
  name       String
  percent    Float?
  isDropped  Boolean      @default(false)
  createdAt  DateTime     @default(now())
  category   GradeCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}

model GradingScale {
  id        String  @id @default(uuid())
  courseId  String
  grade     String
  threshold Float
  course    Course  @relation(fields: [courseId], references: [id], onDelete: Cascade)
}


